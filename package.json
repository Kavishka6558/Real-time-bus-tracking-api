{
  "name": "real-time-bus-tracking-api",
  "version": "1.0.0",
  "description": "A Node.js RESTful API for real-time bus tracking system in Sri Lanka",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:local": "copy .env.local .env && node src/server.js",
    "start:docker": "copy .env.docker .env && node src/server.js",
    "dev": "copy .env.local .env && nodemon src/server.js",
    "dev:docker": "copy .env.docker .env && nodemon src/server.js",
    "test": "jest --testPathIgnorePatterns=routes.test.js --testPathIgnorePatterns=buses.test.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "seed": "node src/scripts/seed.js"
  },
  "keywords": [
    "api",
    "bus-tracking",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "eslint": "^8.49.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
